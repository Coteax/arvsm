<style type="text/css">
  body {
    background-color: #DADADA;
  }
  .column {
    max-width: 450px;
  }
</style>
<div class="ui  aligned center aligned grid">
  <div class="column" style="margin-top:50px">
    <h2 class="ui icon header">
      <%=image_tag 'logo.png', class:'ui image', style:'width:auto' %>
      <div class="content">
        Login to your account
      </div>
    </h2>

    <%= form_for(:session, url: login_path,html:{ class:'ui large form'}) do |f| %>
    <% flash.each do |message_type, message| %>
    <div class="ui error visible attached message"><%= message %></div>
    <% end %>

    <div class="ui stacked segment">

      <div class="field">
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, placeholder: "E-mail address" %>
        </div>
      </div>
      <div class="field">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, placeholder: "Password" %>
        </div>
      </div>
      <%= f.submit "Login", class: 'ui fluid large red submit button' %>
    </div>
    <% end %>
    <!--
    <div class="ui message">
      New to us? <a href="#">Sign Up</a>
    </div>
  -->
  </div>
</div>
